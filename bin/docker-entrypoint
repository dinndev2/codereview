#!/bin/bash -e

# Enable jemalloc for reduced memory usage and latency.
if [ -z "${LD_PRELOAD+x}" ] && [ -f /usr/lib/*/libjemalloc.so.2 ]; then
  export LD_PRELOAD="$(echo /usr/lib/*/libjemalloc.so.2)"
fi

# Check for required secret_key_base in production
if [ "${RAILS_ENV}" == "production" ] && [ -z "${SECRET_KEY_BASE}" ] && [ -z "${RAILS_MASTER_KEY}" ]; then
  echo "" >&2
  echo "===========================================" >&2
  echo "ERROR: Missing SECRET_KEY_BASE or RAILS_MASTER_KEY" >&2
  echo "===========================================" >&2
  echo "" >&2
  echo "To fix this, set one of these environment variables:" >&2
  echo "" >&2
  echo "Option 1 - SECRET_KEY_BASE (recommended):" >&2
  echo "  Generate: bin/rails secret" >&2
  echo "  Then set in your deployment platform's environment variables" >&2
  echo "" >&2
  echo "Option 2 - RAILS_MASTER_KEY:" >&2
  echo "  Use the value from config/master.key" >&2
  echo "  Set in your deployment platform's environment variables" >&2
  echo "" >&2
  echo "For Docker:" >&2
  echo "  docker run -e SECRET_KEY_BASE=\$(bin/rails secret) ..." >&2
  echo "" >&2
  echo "See DEPLOYMENT.md for platform-specific instructions." >&2
  echo "" >&2
  exit 1
fi

# If running the rails server then create or migrate existing database
if [ "${1}" == "./bin/rails" ] && [ "${2}" == "server" ]; then
  ./bin/rails db:prepare
fi

exec "${@}"
